{
  "name": "@daybreak/backend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "prisma generate && tsup src/index.ts --format esm --clean --dts",
    "start": "prisma db push --skip-generate && node dist/index.js",
    "db:seed": "tsx prisma/seed.ts",
    "db:push": "prisma db push"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@clerk/backend": "^2.29.0",
    "@hono/clerk-auth": "^3.0.3",
    "@hono/node-server": "^1.13.7",
    "@hono/zod-validator": "^0.7.5",
    "@prisma/client": "5.19.1",
    "dotenv": "^17.2.3",
    "googleapis": "^166.0.0",
    "hono": "^4.6.14",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "prisma": "5.19.1",
    "tsup": "^8.5.1",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  }
}
