{
  "name": "daybreak",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "pnpm --parallel run dev",
    "dev:frontend": "pnpm --filter @daybreak/frontend dev",
    "dev:backend": "pnpm --filter @daybreak/backend dev",
    "build": "pnpm --filter @daybreak/backend build && pnpm --filter @daybreak/frontend build",
    "build:frontend": "pnpm --filter @daybreak/frontend build",
    "build:backend": "pnpm --filter @daybreak/backend build"
  },
  "devDependencies": {
    "@prisma/client": "5.19.1",
    "prisma": "5.19.1",
    "typescript": "^5.6.3"
  }
}
